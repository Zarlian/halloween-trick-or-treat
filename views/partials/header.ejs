<header>
  <nav class="bg-gradient-to-r from-halloween-purple to-halloween-orange shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between py-3">
        <a class="font-['Creepster'] text-2xl text-white hover:text-halloween-green" href="/">Trick or Treat Map</a>

        <ul class="flex auto">
          <li class="mx-2">
            <a class="block py-2 md:py-1 text-white hover:text-halloween-green font-medium" href="/">Map</a>
          </li>
          <li class="mx-2">
            <a class="block py-2 md:py-1 text-white hover:text-halloween-green font-medium" href="/stories">Story</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="bg-halloween-black border-t border-halloween-purple">
    <div class="container mx-auto px-4 py-2 flex items-center justify-end space-x-2 text-white">
      <span class="text-sm">Language:</span>
      <button class="px-2 py-1 rounded text-sm <%= (lang === 'nl') ? 'bg-halloween-orange' : 'bg-gray-700' %>" onclick="setLang('nl')">NL</button>
      <button class="px-2 py-1 rounded text-sm <%= (lang === 'fr') ? 'bg-halloween-orange' : 'bg-gray-700' %>" onclick="setLang('fr')">FR</button>
      <button class="px-2 py-1 rounded text-sm <%= (lang === 'en') ? 'bg-halloween-orange' : 'bg-gray-700' %>" onclick="setLang('en')">EN</button>
    </div>
  </div>
  <script>
    function setLang(code) {
      document.cookie = 'lang=' + code + '; path=/; max-age=' + (60*60*24*365).toString();
      window.location.reload();
    }
  </script>
</header>