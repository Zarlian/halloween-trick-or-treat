<%- contentFor('body') %>
  <div class="w-full">
    <div class="px-4 md:px-6 lg:px-8">
      <h1 class="text-2xl md:text-3xl font-bold mb-4">
        <%= (lang==='fr' ) ? 'Histoire' : (lang==='en' ) ? 'Story' : 'Verhaal' %>
      </h1>
      <p class="mb-4 text-white">
        <%= (lang==='fr' ) ? 'Scannez les QR codes le long du parcours pour dÃ©bloquer les parties de l\' histoire.' :
          (lang==='en' ) ? 'Scan QR codes along the route to unlock story parts.'
          : 'Scan QR-codes langs de route om delen van het verhaal te ontgrendelen.' %>
      </p>
      <ul class="space-y-3">
        <% parts.forEach(function(part){ %>
          <li class="border border-halloween-purple rounded p-3 grid grid-cols-3 gap-4 items-center"
            data-part-id="<%= part.id %>">

            <div class="col-span-1">
              <p class="font-semibold">
                <%= part.title %>
              </p>
              <p class="text-sm text-gray-300">Part <%= part.orderIndex || '-' %>
              </p>
            </div>

            <div class="magic-word-container text-center" data-part-id="<%= part.id %>">
              <h2 class="text-orange-600 font-bold">
                <%= (lang==='fr' ) ? 'Mot Magique' : (lang==='en' ) ? 'Magic Word' : 'Toverwoord' %> :
                  <span class="magic-word-value">ðŸ”’ðŸ”’ðŸ”’</span>
              </h2>
            </div>

            <div class="col-span-1 text-right">
              <a class="story-part-link bg-halloween-purple text-white px-2 py-1 rounded hover:opacity-70 inline-flex items-center gap-1 text-xs"
                href="/stories/part/<%= part.id %>" data-part-id="<%= part.id %>" data-magic-word="<%= part.magicWord %>">
                <span class="link-text">
                  <%= (lang==='fr' ) ? 'Ouvrir' : (lang==='en' ) ? 'Open' : 'Openen' %>
                </span>
                <span class="lock-icon hidden">ðŸ”’</span>
              </a>
            </div>
          </li>
          <% }) %>
      </ul>
      <div class="mt-6 text-sm text-gray-300">
        <p>Already scanned a code but can't open? Make sure your browser allows localStorage.</p>
      </div>
    </div>
  </div>

<%- contentFor('extraScripts') %>
  <script>
    // Check unlocked parts and update UI
    const unlocked = JSON.parse(localStorage.getItem('unlockedStoryParts') || '[]');
    const lang = '<%= lang %>';

    // Update all links and magic words based on unlock status
    document.querySelectorAll('.story-part-link').forEach(function (anchor) {
      const id = Number(anchor.getAttribute('data-part-id'));
      const isUnlocked = unlocked.includes(id);
      const magicWord = anchor.getAttribute('data-magic-word'); // Get the magic word from the link element

      if (isUnlocked) {
        // Find the magic word container for this part
        const magicWordContainer = document.querySelector(`.magic-word-container[data-part-id="${id}"]`);
        if (magicWordContainer) {
          // Update the displayed value to the actual magic word
          const magicWordValueSpan = magicWordContainer.querySelector('.magic-word-value');
          if (magicWordValueSpan) {
            magicWordValueSpan.textContent = magicWord;
            magicWordValueSpan.classList.add('text-green-400'); // Optional: make it stand out
          }
        }
      } else {
        // Apply locked styling to the link
        anchor.classList.remove('bg-halloween-purple', 'hover:opacity-70');
        anchor.classList.add('bg-gray-600', 'cursor-not-allowed', 'opacity-60');

        // Update link text to show locked
        const linkText = anchor.querySelector('.link-text');
        const lockIcon = anchor.querySelector('.lock-icon');

        if (lang === 'fr') {
          linkText.textContent = 'VerrouillÃ©';
        } else if (lang === 'en') {
          linkText.textContent = 'Locked';
        } else {
          linkText.textContent = 'Vergrendeld';
        }

        lockIcon.classList.remove('hidden');
      }
    });

    // Gatekeeping: If a part isn't unlocked in localStorage, redirect to /stories to encourage scanning
    document.querySelectorAll('a[href^="/stories/part/"]').forEach(function (anchor) {
      anchor.addEventListener('click', function (e) {
        const id = Number(this.getAttribute('data-part-id'));
        if (!unlocked.includes(id)) {
          e.preventDefault();
          const message = lang === 'fr'
            ? 'Scannez le QR code pour dÃ©bloquer cette partie!'
            : lang === 'en'
              ? 'Scan the QR code to unlock this part!'
              : 'Scan de QR-code om dit deel te ontgrendelen!';
          alert(message);
        }
      });
    });
  </script>