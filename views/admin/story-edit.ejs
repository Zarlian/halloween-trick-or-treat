<%- contentFor('body') %>

  <h1 class="text-2xl font-semibold mb-4">Edit Story Part</h1>

  <form action="/admin/stories/<%= part.id %>?_method=PUT" method="POST">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-white">Title*</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="title" name="title" value="<%= part.title %>" required>
        </div>

        <div class="mb-4">
          <label for="orderIndex" class="block text-sm font-medium text-white">Order</label>
          <input type="number" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="orderIndex" name="orderIndex" value="<%= part.orderIndex || '' %>">
        </div>

        <div class="mb-4">
          <label for="qrKey" class="block text-sm font-medium text-white">QR Key*</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="qrKey" name="qrKey" value="<%= part.qrKey %>" required>
          <p class="text-sm text-gray-300 mt-1">QR URL: <code>/stories/unlock?code=<%= part.qrKey %></code></p>
        </div>

        <div class="mb-4">
          <label class="inline-flex items-center text-white">
            <input type="checkbox" class="mr-2" id="isActive" name="isActive" value="true" <%= part.isActive ? 'checked' : '' %>>
            Active
          </label>
        </div>
      </div>

      <div>
        <div class="mb-4">
          <label for="content" class="block text-sm font-medium text-white">Content (HTML allowed)</label>
          <textarea class="mt-1 p-2 border border-gray-300 rounded text-gray-700 w-full" id="content" name="content" rows="12"><%= part.content %></textarea>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="mb-4">
            <label for="lat" class="block text-sm font-medium text-white">Latitude</label>
            <input type="number" step="any" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="lat" name="lat" value="<%= part.lat || '' %>">
          </div>
          <div class="mb-4">
            <label for="lon" class="block text-sm font-medium text-white">Longitude</label>
            <input type="number" step="any" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="lon" name="lon" value="<%= part.lon || '' %>">
          </div>
        </div>
        <div class="mb-4">
          <div id="map" style="height: 400px; width: 100%;"></div>
          <p class="text-sm text-white">Click on the map to set coordinates</p>
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <a href="/admin" class="bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600">Cancel</a>
      <div class="space-x-2">
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Update</button>
        <form action="/admin/stories/<%= part.id %>?_method=DELETE" method="POST" class="inline">
          <button type="submit" class="bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700" onclick="return confirm('Delete this story part?')">Delete</button>
        </form>
      </div>
    </div>
  </form>

  <%- contentFor('extraScripts') %>
    <script>
      const map = L.map('map').setView([51.130, 2.750], 15);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);

      let marker;

      (function initFromFields() {
        const latField = document.getElementById('lat');
        const lonField = document.getElementById('lon');
        const latVal = parseFloat(latField.value);
        const lonVal = parseFloat(lonField.value);
        if (!isNaN(latVal) && !isNaN(lonVal)) {
          const latlng = L.latLng(latVal, lonVal);
          marker = L.marker(latlng).addTo(map);
          map.setView(latlng, 16);
        }
      })();

      map.on('click', function (e) {
        const lat = e.latlng.lat;
        const lng = e.latlng.lng;
        document.getElementById('lat').value = lat;
        document.getElementById('lon').value = lng;
        if (marker) {
          marker.setLatLng(e.latlng);
        } else {
          marker = L.marker(e.latlng).addTo(map);
        }
      });
    </script>

