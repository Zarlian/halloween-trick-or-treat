<%- contentFor('body') %>

  <h1 class="text-2xl font-semibold mb-4">Add Story Part</h1>

  <form action="/admin/stories" method="POST">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-white">Title*</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="title" name="title" required>
        </div>

        <div class="mb-4">
          <label for="orderIndex" class="block text-sm font-medium text-white">Order</label>
          <input type="number" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="orderIndex" name="orderIndex">
        </div>

        <div class="mb-4">
          <label for="qrKey" class="block text-sm font-medium text-white">QR Key*</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="qrKey" name="qrKey" required>
          <p class="text-sm text-gray-300 mt-1">QR URL: <code>/stories/unlock?code=YOUR_KEY</code></p>
        </div>

        <div class="mb-4">
          <label class="inline-flex items-center text-white">
            <input type="checkbox" class="mr-2" id="isActive" name="isActive" value="true" checked>
            Active
          </label>
        </div>
      </div>

      <div>
        <div class="mb-4">
          <label for="titleNl" class="block text-sm font-medium text-white">Title (NL)</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="titleNl" name="titleNl">
        </div>
        <div class="mb-4">
          <label for="contentNl" class="block text-sm font-medium text-white">Content (NL)</label>
          <textarea class="mt-1 p-2 border border-gray-300 rounded text-gray-700 w-full" id="contentNl" name="contentNl" rows="6"></textarea>
        </div>
        <div class="mb-4">
          <label for="titleFr" class="block text-sm font-medium text-white">Title (FR)</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="titleFr" name="titleFr">
        </div>
        <div class="mb-4">
          <label for="contentFr" class="block text-sm font-medium text-white">Content (FR)</label>
          <textarea class="mt-1 p-2 border border-gray-300 rounded text-gray-700 w-full" id="contentFr" name="contentFr" rows="6"></textarea>
        </div>
        <div class="mb-4">
          <label for="titleEn" class="block text-sm font-medium text-white">Title (EN)</label>
          <input type="text" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="titleEn" name="titleEn">
        </div>
        <div class="mb-4">
          <label for="contentEn" class="block text-sm font-medium text-white">Content (EN)</label>
          <textarea class="mt-1 p-2 border border-gray-300 rounded text-gray-700 w-full" id="contentEn" name="contentEn" rows="6"></textarea>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="mb-4">
            <label for="lat" class="block text-sm font-medium text-white">Latitude</label>
            <input type="number" step="any" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="lat" name="lat">
          </div>
          <div class="mb-4">
            <label for="lon" class="block text-sm font-medium text-white">Longitude</label>
            <input type="number" step="any" class="mt-1 p-2 border border-gray-300 text-gray-700 rounded w-full" id="lon" name="lon">
          </div>
        </div>
        <div class="mb-4">
          <div id="map" style="height: 400px; width: 100%;"></div>
          <p class="text-sm text-white">Click on the map to set coordinates</p>
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <a href="/admin" class="bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600">Cancel</a>
      <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Save Story Part</button>
    </div>
  </form>

  <%- contentFor('extraScripts') %>
    <script>
      const map = L.map('map').setView([51.130, 2.750], 15);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);

      let marker;

      // Pre-place marker if fields already have values (e.g., browser auto-fill)
      (function initFromFields() {
        const latVal = parseFloat(document.getElementById('lat').value);
        const lonVal = parseFloat(document.getElementById('lon').value);
        if (!isNaN(latVal) && !isNaN(lonVal)) {
          const latlng = L.latLng(latVal, lonVal);
          marker = L.marker(latlng).addTo(map);
          map.setView(latlng, 16);
        }
      })();

      map.on('click', function (e) {
        const lat = e.latlng.lat;
        const lng = e.latlng.lng;
        document.getElementById('lat').value = lat;
        document.getElementById('lon').value = lng;
        if (marker) {
          marker.setLatLng(e.latlng);
        } else {
          marker = L.marker(e.latlng).addTo(map);
        }
      });
    </script>
