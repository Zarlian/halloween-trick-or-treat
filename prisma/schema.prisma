generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id          Int       @id @default(autoincrement())
  street      String
  number      String
  lon         Float
  lat         Float
  title       String?
  description String?
  image       String?
  updatedAt   DateTime? @map("updated_at")
  orderIndex  Int?      @map("order_index")
  isHidden    Boolean   @default(false) @map("is_hidden")

  @@map("locations")
}

model StoryPart {
  id         Int     @id @default(autoincrement())
  title      String
  content    String
  titleNl    String?  @map("title_nl")
  contentNl  String?  @map("content_nl")
  assignmentNl String? @map("assignment_nl")
  magicWordNl String? @map("magicWord_nl")
  titleFr    String?  @map("title_fr")
  contentFr  String?  @map("content_fr")
  assignmentFr String? @map("assignment_fr")
  magicWordFr String? @map("magicWord_fr")
  titleEn    String?  @map("title_en")
  contentEn  String?  @map("content_en")
  assignmentEn String? @map("assignment_en")
  magicWordEn String? @map("magicWord_en")
  orderIndex Int?    @map("order_index")
  qrKey      String  @unique @map("qr_key")
  isActive   Boolean @default(true) @map("is_active")
  lat        Float?
  lon        Float?

  @@map("story_parts")
}
